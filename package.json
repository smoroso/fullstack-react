{
  "name": "vanilla-node-react",
  "version": "1.0.0",
  "description": "Boilerplate to build a full stack web application using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/transpiled-server/index.js",
    "dev": "concurrently 'npm run server' 'npm run client'",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "test-client": "npm run lint && cypress run --project ./src/client",
    "test-client-open": "cypress open --project ./src/client",
    "transpile-server": "rm -rf src/transpiled-server && npx babel src/server  --out-dir src/transpiled-server",
    "server": "nodemon --watch src/server --exec 'npm run transpile-server && PORT=8080 node src/transpiled-server/server.js'",
    "test-server": "npm run transpile-server && npm run test-mocha",
    "test-mocha": "mocha ./src/transpiled-server/*.test.js ./src/transpiled-server/**/*.test.js --exit",
    "lint": "eslint src/server src/client && stylelint src/client/**/*.scss",
    "test": "npm run test-server && npm run test-client"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.2.2",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^9.1.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "cypress": "^12.3.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.2.0",
    "nock": "^13.2.9",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.20",
    "prop-types": "^15.8.1",
    "sass-loader": "^13.2.0",
    "sinon": "^15.0.1",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.1",
    "stylelint-scss": "^4.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
